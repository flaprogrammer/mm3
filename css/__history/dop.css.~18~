/* нопка скрыть-развернуть*/
#raz, #skryt {
 display: none;
  opacity: 0.1;
}

label[for="raz"]{ /* вид CSS кнопки */
  padding: 0px 0px;
  border-radius: 2px;
	font-size: 18pt;
	color: #c146ac;
  cursor: pointer; 

  clear: both;
  margin-bottom: 20px;
}
label[for="raz"] img{ /* вид CSS кнопки */
  margin-right: 3px; 
}

#raz:checked ~ label[for="raz"] {
 color: #6c6c6c;
}
#raz:hover ~ label[for="raz"] {
 color: #545454;
}
#raz:checked ~ #skryt {
	display: block;
   opacity: 1;
   font-size: 12pt;
   line-height: 14pt !important;
   color: #808080;
}

